@using (Html.BeginForm("Edit", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EmployeeId)

    <ul class="nav nav-tabs" id="tab-4">
        <li class="active"><a href="#tab4hellowWorld">@Resources.Information</a></li>
        <li><a href="#tab4FollowUs">@Resources.Config</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab4hellowWorld">
            <div class="grid">
                <div class="grid-title no-border">
                    <h3>@Resources.PersonalInfo</h3>
                </div>
                <div class="grid-body no-border">                  
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                @if (Model.ProfileUrl.IsEmpty())
                                {
                                    <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
                                }
                                else
                                {
                                    <img src="@Model.ProfileUrl" class="avatar img-circle" alt="avatar">
                                }
                                <h6>@Resources.Profile</h6>
                                <input type="file" name="file" id="file" style="width: 100%;" value="" multiple />
                                @Html.HiddenFor(model => model.ProfileUrl)
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="form-label">@Resources.Gender</label>
                                    @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @class = "form-control", @placeholder = Resources.Gender })
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">@Resources.FirstName</label>
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.FirstName } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">@Resources.LastName</label>
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.LastName } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="form-label">@Resources.PhoneNumber</label>
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.PhoneNumber } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">@Resources.NationalCardId</label>
                                    @Html.EditorFor(model => model.NationalCardId, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.NationalCardId } })
                                    @Html.ValidationMessageFor(model => model.NationalCardId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">@Resources.BirthDate</label>
                                    <div class='input-group'>
                                        @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control date", @placeholder = Resources.BirthDate } })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-4">
                                    <label class="form-label">@Resources.Country</label>
                                    @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "form-control", @placeholder = Resources.Countries })
                                    @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">@Resources.City</label>
                                    @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control", @placeholder = Resources.Cities })
                                    @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">@Resources.HireDate</label>
                                    <div class='input-group'>
                                       @Html.EditorFor(model => model.HireDate, new { htmlAttributes = new { @class = "form-control date", @placeholder = Resources.HireDate} })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.HireDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="form-label">@Resources.Address</label>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab4FollowUs">
            <div class="grid">
                <div class="grid-title no-border">
                    <h3>@Resources.CompanyInfo</h3>
                </div>
                <div class="grid-body no-border">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">@Resources.Code</label>
                            @Html.EditorFor(model => model.EmployeeCode, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.Code } })
                            @Html.ValidationMessageFor(model => model.EmployeeCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">@Resources.Shift</label>
                            @Html.DropDownList("ShiftId", null, htmlAttributes: new { @class = "form-control", @placeholder = Resources.Shift })
                            @Html.ValidationMessageFor(model => model.ShiftId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Resources.Department</label>
                            @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control", @placeholder = Resources.Department })
                            @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Resources.JobPosition</label>
                            @Html.DropDownList("JobPositionId", null, htmlAttributes: new { @class = "form-control", @placeholder = Resources.JobPosition })
                            @Html.ValidationMessageFor(model => model.JobPositionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label class="">@Resources.ExtraHour</label>
                            @Html.CheckBoxFor(model => model.IsExtraHourPay, new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            <label class="">@Resources.IsActive</label>
                            @Html.CheckBoxFor(model => model.IsExtraHourPay, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">@Resources.Cancel</button>
        <input class="btn btn-primary" type="submit" value="@Resources.Save" />
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        $('#tab-4 a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        });

        $('.date').datetimepicker({
            format: 'DD/MM/YYYY HH:mm'
        });
    });
</script>
