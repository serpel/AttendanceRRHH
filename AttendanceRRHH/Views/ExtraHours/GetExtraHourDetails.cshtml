@model IEnumerable<AttendanceRRHH.Models.ExtraHourDetail>
@using AttendanceRRHH.Helpers
@using Resources

<table class="table table-striped table-flip-scroll cf">
    <thead class="cf"> 
        <tr>
            <th>@Resources.Day</th>
            <th>@Resources.Code</th>
            <th>@Resources.StartHour</th>
            <th>@Resources.EndHour</th>
            <th>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", Resources.CreateNew, "CreateExtraHourDetails", "ExtraHours", routeValues: new { extra = Model.FirstOrDefault().ExtraHourId }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndHour)
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", Resources.Edit, "EditExtraHourDetails", "ExtraHours", routeValues: new { id = item.ExtraHourDetailId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", Resources.Delete, "DeleteExtraHourDetails", "ExtraHours", routeValues: new { id = item.ExtraHourDetailId }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
