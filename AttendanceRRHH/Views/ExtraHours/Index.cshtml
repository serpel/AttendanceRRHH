@model IEnumerable<AttendanceRRHH.Models.ExtraHour>
@using Resources
@using AttendanceRRHH.Helpers

<div class="row-fluid">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index","TimeSheets")" class="active">@Resources.Records</a> </li>
        <li><a href="@Url.Action("Index","Shifts")" class="active">@Resources.Shifts</a> </li>
    </ul>
</div>

<div class="row-fluid">
    <div class="col-md-12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>@Resources.ExtraHour</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="@Url.Action("Index")" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        <button data-dismiss="alert" class="close"></button>
                        @TempData["Message"]
                    </div>
                }
                <table class="table table-striped table-flip-scroll cf">
                    <thead class="cf">
                        <tr>
                            <th>@Resources.Company</th>
                            <th>@Resources.Name</th>
                            <th>@Resources.Count</th>
                            <th>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", Resources.CreateNew, "Create", "ExtraHours", routeValues: null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @item.ExtraHourDetail.Count
                                </td>
                                <td>
                                    <div class="pull-right">
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", Resources.Edit, "Edit", "ExtraHours", routeValues: new { id = item.ExtraHourId }, htmlAttributes: new { @class = "btn btn-default" })
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", Resources.Edit, "Delete", "ExtraHours", routeValues: new { id = item.ExtraHourId }, htmlAttributes: new { @class = "btn btn-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
