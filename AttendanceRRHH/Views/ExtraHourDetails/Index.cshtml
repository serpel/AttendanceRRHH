@model IEnumerable<AttendanceRRHH.Models.ExtraHourDetail>
@using Resources
@using AttendanceRRHH.Helpers

<div class="row-fluid">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index","TimeSheets")" class="active">@Resources.Records</a> </li>
        <li><a href="@Url.Action("Index","Shifts")" class="active">@Resources.Shifts</a> </li>
    </ul>
</div>

<div class="row-fluid">
    <div class="col-md-12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>@Resources.ExtraHour</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="@Url.Action("Index")" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        <button data-dismiss="alert" class="close"></button>
                        @TempData["Message"]
                    </div>
                }
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ExtraHour.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartHour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndHour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Day)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExtraHour.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ExtraHourDetailId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ExtraHourDetailId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ExtraHourDetailId })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
