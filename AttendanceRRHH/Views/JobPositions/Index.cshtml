@model IEnumerable<AttendanceRRHH.Models.JobPosition>
@using AttendanceRRHH.Helpers
@using Resources

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>@Resources.JobPosition</h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" id="datatable">
                    <thead>
                        <tr>
                            <th>@Resources.JobPosition</th>
                            <th>@Resources.IsActive</th>
                            <th>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", Resources.CreateNew, "Create", "Cities", routeValues: null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/DataTables-1.10.11/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.11/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/modal.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var id = '#datatable';

            var controller = 'JobPositions';

            var columns =
            [
                        { data: 'JobTitle' },
                        { data: 'IsActive' },
                        { data: 'JobPositionId' }
            ];

            var url = '@Url.Action("GetJobPositions")';

            var datatable = CreateTable(id, columns, url, controller);

            $(id).on('draw.dt', function () {
                LoadModal(id, columns, url, controller);
            });

        });
    </script>
}