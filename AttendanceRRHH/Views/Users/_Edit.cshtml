@model AttendanceRRHH.Models.UserViewModel
@using Resources


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@Resources.Edit</h4>
</div>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "EditForm" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)

        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Email</label>
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Roles</label>
                @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "select-drop", multiple = "multiple", style = "width:100%" })
            </div>
        </div>
        <div class="row form-row">
            <div class="col-md-12">
                 <label class="form-label">@Resources.Companies</label>
                @Html.DropDownList("Companies", null, htmlAttributes: new { @class = "select-drop", multiple = "multiple", style = "width:100%" })
            </div>
        </div>
        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Department</label>
                @Html.DropDownList("Departments", null, htmlAttributes: new { @class = "select-drop", multiple = "multiple", style = "width:100%" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">@Resources.Cancel</button>
        <input class="btn btn-primary" type="submit" value="@Resources.Save" />
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.select-drop').select2();

        $('#EditForm').submit(function () {
            $('input[type=submit]', this).attr('disabled', 'disabled');
        });
    });
</script>