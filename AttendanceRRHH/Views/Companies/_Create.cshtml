@model AttendanceRRHH.Models.Company
@using Resources


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@Resources.CreateNew</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CompanyId)

        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Name</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Address</label>
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.Logo</label>
                @Html.EditorFor(model => model.LogoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LogoUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-row">
            <div class="col-md-6">
                <label class="form-label">@Resources.Country</label>
                @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "select-drop", @style = "width:100%" })
                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label">@Resources.City</label>
                @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "select-drop", @style = "width:100%" })
                @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-row">
            <div class="col-md-12">
                <label class="form-label">@Resources.EmailSendCronExpression</label>
                @Html.EditorFor(model => model.EmailSendCronExpression, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailSendCronExpression, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-row">
            <div class="col-md-6">
                <label class="form-label">@Resources.IsActive</label>
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}


<script type="text/javascript">
    $('.select-drop').select2();
</script>

