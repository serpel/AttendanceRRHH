@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var today = moment().format('YYYY/MM/DD HH:mm');
            $('date').val(today);

            $('#calender-next').click(function () {
                var date = $('#date').val();
                LoadData(date);
                $('#calender-current-date').html(date);
            });

            $('#calender-prev').click(function () {
                var date = $('#date').val();
                LoadData(date);
                $('#calender-current-date').html(date);
            });


            function LoadData(date) {
                $.ajax({
                    url: '@Url.Action("GetSchedules")',
                    type: 'GET',
                    data: { date: date },
                    dataType: "json",
                    async: false,
                    success: function (data) {

                        if (data.length > 0) {
                            $.each(data, function (i, val) {

                            });
                        }
                    }
                });

            };
        });
    </script>
}
